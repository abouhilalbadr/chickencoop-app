{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "chickencoop",
    "version": "1.0.24"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "http": {
        "all": true,
        "request": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.chicken-coop.cyou",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "windows": {
        "installMode": "passive"
      },
      "endpoints": [
        "https://gist.githubusercontent.com/abouhilalbadr/396aad2eeb26b826b1d72efca5eacee8/raw/"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDY0N0FENEVGREIwRkU0MQpSV1JCL3JEOVRxMUhCbmJIK1ZDQmNHUGVKRVlrelFLVU1lSGVIS09YbmJIRFRPM0pReENwemVCbAo="
    },
    "windows": [
      {
        "fullscreen": true,
        "resizable": true,
        "title": "Chicken Coop",
        "width": 1000,
        "height": 800
      }
    ]
  }
}
